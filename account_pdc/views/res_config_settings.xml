<odoo>
    <record id="res_config_settings_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="tax_exigibility" position="after">
                <div class="col-lg-6 o_setting_box" id="pdc_hand_over_notification">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Hand Over PDC Notify Email</span>
                        <div class="text-muted">
                            Choose email template to render for send hand over pdc
                        </div>
                        <div class="row mt16">
                            <label for="hand_over_pdc_email_template_id" class="col-lg-4 o_light_label"
                                   string="Hand Over PDC Template"/>
                            <field name="hand_over_pdc_email_template_id" class="oe_inline"/>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 o_setting_box" id="pdc_hand_over_reject_notification">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Hand Over PDC Reject Notify Email</span>
                        <div class="text-muted">
                            Choose email template to render for send hand over pdc Reject
                        </div>
                        <div class="row mt16">
                            <label for="hand_over_pdc_reject_email_template_id" class="col-lg-4 o_light_label"
                                   string="Hand Over Reject Template"/>
                            <field name="hand_over_pdc_reject_email_template_id" class="oe_inline"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
